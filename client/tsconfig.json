{
  "include": ["packages", "pages"],
  "exclude": ["node_modules", ".next", ".history"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@siteModules/*": ["packages/site/modules/*"],
      "@siteTests/*": ["packages/site/global/__tests__/*"],
      "@siteComponents/*": ["packages/site/global/components/*"],
      "@siteAssets/*": ["packages/site/global/assets/*"],
      "@siteContent/*": ["packages/site/global/content/*"],
      "@siteStore/*": ["packages/site/global/store/*"],
      "@siteStyles/*": ["packages/site/global/styles/*"],
      "@siteUtils/*": ["packages/site/global/utils/*"],
      "@siteTypes/*": ["packages/site/global/__types/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
