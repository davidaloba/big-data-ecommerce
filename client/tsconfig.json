{
  "include": [
    "packages",
    "pages",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".history"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@globalStore/*": [
        "packages/global/store/*"
      ],
      "@globalStyles/*": [
        "packages/global/styles/*"
      ],
      "@globalUtils/*": [
        "packages/global/utils/*"
      ],
      "@globalAssets/*": [
        "packages/global/assets/*"
      ],
      "@globalTypes/*": [
        "packages/global/__types/*"
      ],
      "@globalHooks/*": [
        "packages/global/hooks/*"
      ],
      "@marketingModules/*": [
        "packages/marketing/__modules/*"
      ],
      "@marketingTests/*": [
        "packages/marketing/__tests__/*"
      ],
      "@marketingComponents/*": [
        "packages/marketing/components/*"
      ],
      "@appModules/*": [
        "packages/app/__modules/*"
      ],
      "@appComponents/*": [
        "packages/app/components/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
