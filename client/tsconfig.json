{
  "include": [
    "packages",
    "pages",
    "app",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".history"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@globalStore/*": [
        "packages/app/global/store/*"
      ],
      "@globalComponents/*": [
        "packages/app/global/components/*"
      ],
      "@globalStyles/*": [
        "packages/app/global/styles/*"
      ],
      "@globalUtils/*": [
        "packages/app/global/utils/*"
      ],
      "@globalAssets/*": [
        "packages/app/global/assets/*"
      ],
      "@globalTypes/*": [
        "packages/app/global/__types/*"
      ],
      "@globalHooks/*": [
        "packages/app/global/hooks/*"
      ],
      "@features/*": [
        "packages/app/features/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  }
}
