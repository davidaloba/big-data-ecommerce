{
  "include": ["packages", "pages"],
  "exclude": ["node_modules", ".next", ".history"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@appModules/*": ["packages/app/modules/*"],
      "@marketingModules/*": ["packages/marketing/modules/*"],
      "@marketingTests/*": ["packages/marketing/global/__tests__/*"],
      "@marketingComponents/*": ["packages/marketing/global/components/*"],
      "@marketingAssets/*": ["packages/marketing/global/assets/*"],
      "@marketingContent/*": ["packages/marketing/global/content/*"],
      "@marketingStore/*": ["packages/marketing/global/store/*"],
      "@marketingStyles/*": ["packages/marketing/global/styles/*"],
      "@marketingUtils/*": ["packages/marketing/global/utils/*"],
      "@marketingTypes/*": ["packages/marketing/global/__types/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
