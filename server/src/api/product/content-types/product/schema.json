{
  "kind": "collectionType",
  "collectionName": "product",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "slug": {
      "required": true,
      "type": "uid"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "hoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "price": {
      "type": "float",
      "required": true,
      "default": 0
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "size": {
      "type": "customField",
      "options": [
        "One size",
        "XXS",
        "XS",
        "S",
        "M",
        "L",
        "XL",
        "XXL",
        "waist 28",
        "waist 30",
        "waist 32",
        "waist 34",
        "waist 36",
        "waist 38",
        "shoe 40",
        "shoe 41",
        "shoe 42",
        "shoe 43",
        "shoe 44",
        "shoe 45",
        "shoe 46"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "color": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "shop.color-variant"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "component",
      "component": "shop.rich-content"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "__lib.seo"
    }
  }
}
